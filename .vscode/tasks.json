        "cwd": "${workspaceFolder}",
        "shell": { "executable": "/bin/bash", "args": ["-lc"] }
      },
      "windows": {
        "command": "${workspaceFolder}\\gradlew.bat",
        "options": { "shell": { "executable": "C:/Windows/System32/cmd.exe", "args": ["/d", "/c"] } }
      }
