{
  // VS Code tasks for local runs
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Gradle: Build",
      "type": "shell",
      // Use gradle wrapper with args to avoid quoting issues, force bash on Linux/WSL
      "command": "${workspaceFolder}/gradlew",
      "args": ["clean", "build", "-x", "test", "-x", "javadoc", "-x", "javadocJar", "--no-daemon"],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gradle"],
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": { "executable": "/bin/bash", "args": ["-lc"] }
      },
      "windows": {
        // Optional Windows fallback when not using WSL Remote
        "command": "${workspaceFolder}\\gradlew.bat",
        "options": { "shell": { "executable": "C:/Windows/System32/cmd.exe", "args": ["/d", "/c"] } }
      }
    },
    {
      "label": "Gradle: Build+Docs",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "args": ["clean", "build", "--no-daemon"],
